}



<style>

    .Filter {
        float: left;
    }

    .card {
        max-width: 100%;
    }

    .card-text {
        word-wrap: break-word;
    }

    .card-title {
        width: 100%;
        overflow: hidden; /* taşanları gizle */
        white-space: nowrap; /* alt satıra hiç inme */
        text-overflow: clip;
    }

    .img-container {
        float: left;
        width: 20%;
    }

    .col-lg-3 {
        flex: 0 0 auto;
        width: 25%;
    }

    .item {
        padding-bottom: 45px;
    }



    .col-md-4 {
        flex: 0 0 auto;
        width: 33.3333333333%;
    }

    .col-lg-3 {
        flex: 0 0 auto;
        width: 25%;
    }

    .carousel-item {
        width: 100%;
        height: 33%;
    }
</style>


<h1>Home</h1>




<div class="container">


    <div class="container" style="padding-left:3.5%; padding-right:1.5%;">
        <center>


            <br>

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">

                    @foreach (var item in Model.Slider.PageImagesList)
                    {
                        if (item.SortOrder == 0)
                        {
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            i++;
                        }
                        else
                        {
                            <li data-target="#myCarousel" data-slide-to=@i></li>
                            i++;
                        }


                    }
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">

                    @foreach (var item in Model.Slider.PageImagesList)
                    {
                        if (item.SortOrder == 0)
                        {
                            <div class="carousel-item active">
                                <img src=@Url.Content(item.Images.FileWay) class="img-container" alt=@item.Images.ImageFileName style="width:100%;">

                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img src=@Url.Content(item.Images.FileWay) class="img-container" alt=@item.Images.ImageFileName style="width:100%;">

                            </div>
                        }

                    }


                </div>

                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </center>
    </div>

    @*<div class="bg-center" style="margin: 25px 25px 25px 25px;">
            <img src="~/images/Event/sliderİmage.png" />
        </div>*@
    <div class="container" style="width:100%; padding-left:2%;">
        <form asp-action="EventFilter" asp-controller="AfterLogin">
            <div class="Filter col-md-6">

                <label for="Category">Event Type :</label>

                <select name="EventTypesId" id="EventTypesId" class="form-control" required>

                    @foreach (var item in Model.EventTypes)
                    {
                        <option value="@item.EventTypesId">
                            @item.EventTypesName
                        </option>
                    }

                </select>

            </div>

            <div class="Filter col-md-6">
                <label for="Category">Event Category :</label>

                <select name="Category" id="Category" class="form-control" required>
                    @foreach (var item in Model.Categories)
                    {
                        <option value="@item.CategoryId">
                            @item.CategoryName
                        </option>
                    }
                </select>
                <br>
            </div>
            <div class="col-md-6">
                <input type="submit" value="Filter" style="color: #fff; background-color: #10244c; padding: 0.5rem 6rem; border-color: #10244c" class="btn btn-primary">
            </div>
        </form>
    </div>
    <div class="container" style="width:100%; padding-right:2.5%;">
        
            <section class="photo-galery">
                <div class="container" style="margin: 25px 25px 25px 25px;">


                    @foreach (var item in Model.EventList)
                    {
                        @using (Html.BeginForm("DetailEvent", "Event", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="img-container item" style="padding-left:10px;padding-right:10px">
                                <div class="card bg-transparent">
                                    <img class="card-img-top" src=@Url.Content(item.Images.FileWay) alt="Snow" width="100%">
                                    <div class="card-body">
                                        <p class="card-title " style="font-weight:900" title=@item.Eventmodel.EventsName>@item.Eventmodel.EventsName</p>
                                        <div class="card-footer text-muted bg-transparent">@item.Eventmodel.StartDate</div>
                                        <input type="hidden" name="id" value=@item.Eventmodel.EventsId />
                                        <button type="submit" name="Details" value="@item.Eventmodel.EventsId" class="btn btn-success DetailsButton">Details</button>
                                    </div>
                                </div>
                            </div>
                        }
                    }


                </div>


            </section>
        
