                    <input id="userImage" lang="en-us" type="file" name="UploadLogo" asp-for="Usermodel.UploadLogo" accept=".jpeg, .png" />
                </div>
            </div>

            <div class="form-group">
                <div>Title Of Your Company (If Instructor)</div>
                <input name="titlecompanyname" type="text" placeholder="Title Of Your Company" asp-for="Usermodel.Instructor" class="form-control" id="instructortitlecompany" />
                <span asp-validation-for="Usermodel.Instructor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div>Do you work? (If Student)</div>
