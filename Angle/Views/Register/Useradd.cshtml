                <span asp-validation-for="Usermodel.Student" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div>Title Of Your Company (If Yes)*</div>
                <input name="name" type="text" placeholder="Title Of Your Company" asp-for="Usermodel.Student" class="form-control" id="studenttitlecompany" />
                <span asp-validation-for="Usermodel.Student" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>University*</label>
                <select id="university" class="form-control" name="UniversityId">
                    @foreach (var item in Model.Universities)
                    {
                        <option value="@item.UniversityId">
                            @item.UniversityName
                        </option>
                    }
                </select>
            </div>

            <br />

            <div class="form-group" required>
                <label>Departmant*</label>
