@model Angle.Models.RegisterModel;

@{
    ViewData["Title"] = "Useradd";
}

<h1>Sign Up</h1>

<h4>Please fill in your information completely!</h4>
<hr />

<div  class="form-group"  style="padding-left:20%;">
    <div class="col-md-6">
        <style>
            input.setCheckBox {
                width: 15px;
                height: 15px;
            }
        </style>
        <font color="Red">@TempData["notice"]</font>
        <br />
        <form asp-action="Useradd" asp-controller="Register" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div>Name*</div>
                <input name="Name" type="text" placeholder="Your Name" asp-for="Usermodel.Name" class="form-control" required />
                <span asp-validation-for="Usermodel.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div>Surname*</div>
                <input name="Surname" type="text" placeholder="Your Surame" asp-for="Usermodel.Surname" class="form-control" required />
                <span asp-validation-for="Usermodel.Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div>Gender*</div>
                <div class="control" name="GenderId" required>
                    <label class="radio">
                        <input type="radio" name="GenderId" id="man"> Male &emsp;
                        <input type="radio" name="GenderId" id="woman"> Female &emsp;
                        <input type="radio" name="GenderId" id="dwts"> Don't want to specify
                    </label>
                </div>
            </div>

            <div class="form-group">
                <div>E-mail*</div>
                <input name="Email" type="email" placeholder="Your E-mail" asp-for="Usermodel.Email" class="form-control" required />
                <span asp-validation-for="Usermodel.Email" class="text-danger"></span>
            </div>
            <label>Area Code*</label>
            <br />
            <div class="form-row">

                    <select class="form-control col-4" aria-label=".form-select-sm example" id="areacode" name="AreaCodeId" required>
                        @foreach (var item in Model.AreaCodes)
                        {
                            <option value="@item.AreaCodeId">
                                @item.AreaCodeName
                            </option>
                        }
                    </select>
                    <input name="Phone" type="text" placeholder="Your Phone Number" asp-for="Usermodel.Phone" maxlength="10" size="40" class="form-control col-8" required />
                    <span asp-validation-for="Usermodel.Phone" class="text-danger"></span>
               
            </div>
            <br />
            <div class="form-group">
                <div>What Are You Registering As?*</div>

                <div class="control" name="role." required>
                    <label class="radio">
                        <input type="radio" id="2" name="role" value=2 onclick="myFunction()"> Instructor &emsp;
                        <script>
                            function myFunction() {
                                document.getElementById("instructorcompany").disabled = false;
                                document.getElementById("instructortitlecompany").disabled = false;
                                document.getElementById("studentyes").disabled = true;
                                document.getElementById("studentno").disabled = true;
                                document.getElementById("studentcompany").disabled = true;
                                document.getElementById("studenttitlecompany").disabled = true;

                            }
                        </script>
                        <input type="radio" id="4" name="role" value=4 onclick="myfunction()"> Incudemist
                        <script>
                            function myfunction() {
                                document.getElementById("instructorcompany").disabled = true;
                                document.getElementById("instructortitlecompany").disabled = true;
                                document.getElementById("studentyes").disabled = false;
                                document.getElementById("studentno").disabled = false;
                                document.getElementById("studentcompany").disabled = false;
                                document.getElementById("studenttitlecompany").disabled = false;
                            }
