                    @foreach (var item in Model.Departmants)
                    {
                        <option value="@item.DepartmantId">
                            @item.DepartmantName
                        </option>
                    }
                </select>
            </div>

            <br />

            <div class="form-group" required>
                <label>Class*</label>
                <select id="class" class="form-control" name="ClassId">
                    @foreach (var item in Model.Classes)
                    {
                        <option value="@item.ClassId">
                            @item.ClassName
                        </option>
                    }
                </select>
            </div>

            <br />

            <div class="password-match" data-msg="Passwords doesn't match">
                <div class="form-group">
                    <div>Password* (8 characters minimum)</div>
                    <input name="Password" type="password" placeholder="New Password" asp-for="Usermodel.Password" class="form-control" id="Password" minlength="8" required />
                    <span class="help-block input-group-text text-muted bg-transparent border-0" style="float: right; margin-left: -20px; margin-top: -30px; position: relative;">
                        <em class="far fa-eye" id="togglePassword1"></em>
                        <script>
                            const togglePassword1 = document.querySelector('#togglePassword1');
                            const password = document.querySelector('#Password');



                            togglePassword1.addEventListener('click', function (e) {
                                // toggle the type attribute
                                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                                password.setAttribute('type', type);
                                // toggle the eye slash icon
                                this.classList.toggle('fa-eye-slash');
                            });
                        </script>
                    </span>
                    <span asp-validation-for="Usermodel.Password" class="text-danger" id=""></span>

                </div>

                <div class="form-group" required>
                    <div>Confirm your password*</div>
                    <input name="ConfirmPassword" type="password" placeholder="Again New Password" asp-for="Usermodel.ConfirmPassword" class="form-control" id="ConfirmPassword" minlength="8" required />
