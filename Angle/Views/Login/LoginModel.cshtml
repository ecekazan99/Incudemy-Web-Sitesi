@using Angle.Models
@model Angle.Models.LoginModel
@{
    ViewData["Title"] = "LoginModel";
}

<h1>Login</h1>

<hr />

<div class="form-group"  style="padding-left:20%;">
    <div class="col-md-6">
        <style>
            input.setCheckBox {
                width: 10px;
                height: 10px;
            }
        </style>

        <form asp-action="LoginModel" asp-controller="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div><b>Email</b></div>
                <input name="email" type="email" placeholder="Your Email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>


            </div>

            <div class="form-group">
                <div><b>Password</b></div>
                <input name="password" type="password" id="pass" placeholder="Your Password" asp-for="Password"
                       class="form-control" />
                <span class="help-block input-group-text text-muted bg-transparent border-0"
                      style="float: right; margin-left: -20px; margin-top: -30px; position: relative;">
                    <i class="far fa-eye" id="togglePassword2"></i>
                    <script>
                        const togglePassword2 = document.querySelector('#togglePassword2');
                        const password = document.querySelector('#pass');



                        togglePassword2.addEventListener('click', function (e) {
                            // toggle the type attribute
                            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                            password.setAttribute('type', type);
                            // toggle the eye slash icon
                            this.classList.toggle('fa-eye-slash');
                        });
                    </script>
                </span>
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-check" style="text-align:left;">
                <input class="form-check-input" type="checkbox" value="" id="RememberMe" />
                <label class="form-check-label" for="RememberMe" style="margin-top:1px;">
                    Remember Me
                </label>
            </div>

            <div style="text-align:center;">
                <span class="psw">
                    <a href="/Login/ForgotPassword">
                        <img src="~/images/Forgot Password/forgot password.png" width="16" height="16"
                             type="image/png" /> Forgot Password ?
                    </a>
                </span>
            </div>
